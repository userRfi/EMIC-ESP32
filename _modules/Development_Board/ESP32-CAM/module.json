{
    "name": "ESP32-CAM",
    "version": "1.0.0",
    "description": "Modulo ESP32 con camara OV2640 y slot microSD",
    "author": "EMIC Development Team",
    "category": "Development_Board",
    "mcu": "ESP32",
    "chip": "ESP32-S",
    "features": {
        "wifi": true,
        "bluetooth": true,
        "ble": true,
        "flash_mb": 4,
        "psram": true,
        "psram_mb": 4,
        "camera": "OV2640",
        "camera_resolution": "2MP",
        "sd_card": true,
        "led_flash": true,
        "usb": false,
        "gpio_available": 10
    },
    "pinout": {
        "led_flash": 4,
        "led_builtin": 33,
        "sd_clk": 14,
        "sd_cmd": 15,
        "sd_data0": 2,
        "sd_data1": 4,
        "sd_data2": 12,
        "sd_data3": 13,
        "camera_d0": 5,
        "camera_d1": 18,
        "camera_d2": 19,
        "camera_d3": 21,
        "camera_d4": 36,
        "camera_d5": 39,
        "camera_d6": 34,
        "camera_d7": 35,
        "camera_xclk": 0,
        "camera_pclk": 22,
        "camera_vsync": 25,
        "camera_href": 23,
        "camera_sda": 26,
        "camera_scl": 27,
        "camera_pwdn": 32,
        "camera_reset": -1
    },
    "gpio_free": [1, 3, 16],
    "notes": [
        "GPIO1 y GPIO3 son UART0 (programacion)",
        "La mayoria de pines estan usados por camara/SD",
        "Requiere programador externo (FTDI/CP2102)",
        "GPIO0 debe estar en GND para programar"
    ],
    "documentation": "https://github.com/espressif/esp32-camera"
}
